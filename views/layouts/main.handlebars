    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            // Get the navbar
            const navbar = document.querySelector('.my-nav');

            // Get the hamburger menu
            const hamburgerMenu = document.querySelector('.mobile-menu');

            // Function to update the width of the hamburger menu
            const updateMenuWidth = () => {
                hamburgerMenu.style.width = `${navbar.offsetWidth}px`;
            };

            // Update the width of the hamburger menu when the page loads
            updateMenuWidth();

            // Update the width of the hamburger menu when the window is resized
            window.addEventListener('resize', updateMenuWidth);
        });

        const main_menu = document.querySelector(".main-menu");
        const btn = document.querySelector("button.mobile-menu-button");
        const menu = document.querySelector(".mobile-menu");

        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
        // if btn is not shown then close the menu
        window.addEventListener("resize", () => {
            if (window.innerWidth > 970) {
                menu.classList.add("hidden");
                main_menu.classList.add("rounded-t-3xl");
                main_menu.classList.add("rounded-b-3xl");
            }
        });
        // if the mobile-menu is shown, make the main menu bottom border radius to 0
        btn.addEventListener("click", () => {
            if (menu.classList.contains("hidden")) {
                main_menu.classList.add("rounded-t-3xl");
                main_menu.classList.add("rounded-b-3xl");
            } else {
                main_menu.classList.remove("rounded-b-3xl");
            }
        });

        // if the current url is general, then remove the navbar
        if (window.location.href.indexOf("general") > -1) {
            document.querySelector(".my-nav").remove();
        }
    </script>
