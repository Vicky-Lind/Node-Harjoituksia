    <script>

        window.addEventListener("load", function() {
            const container = document.querySelector('.scrolling-touch');

            container.addEventListener('wheel', function(e) {
                if (e.deltaY != 0) {
                    container.scrollLeft += (e.deltaY * 1);
                    e.preventDefault();
                }
            }, false);
        });
        //______________________________________________
        // clock
        window.onload = function() {     
        
        // clock
        function showTime() {
            // Create a date object containing current timestamp
            var date = new Date();
            // Separate hours, minutes and seconds
            var h = date.getHours();
            var m = date.getMinutes();
            var s = date.getSeconds();
            // Add leading zeros
            h = (h < 10) ? "0" + h : h;
            m = (m < 10) ? "0" + m : m;
            s = (s < 10) ? "0" + s : s;
            // Build a string for time and put it into h1 named clock
            var time = h + "." + m + "." + s;
            document.getElementById("clock").innerHTML = time;
            // After 1000 ms (1 s) call showTime again
            setTimeout(showTime, 1000);
        }
        showTime();
        }
