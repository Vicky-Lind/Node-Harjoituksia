                            <a href="/general">
                                Get Started
                            </a>
                        </button>
                    </div>
                </div>
            </div>

  <script>
    const heroBackground = document.getElementById("hero-background");

    // Set the opacity of the iframe to 1 when the page is loaded
    window.addEventListener("load", () => {
      heroBackground.style.opacity = 1;
