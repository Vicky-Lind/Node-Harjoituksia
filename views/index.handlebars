  <style>
  #hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 2;
    pointer-events: none;
  }
  #hero-section {
    z-index: 1;
    position: relative;
    
  }
  /* Hide the iframes on screens smaller than 1024 pixels */
@media (max-width: 923px) {
    #hero-section iframe {
      visibility: hidden;
