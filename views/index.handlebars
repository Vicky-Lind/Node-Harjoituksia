{{!-- Show a digital clock rendered by client ie browser --}}
{{!-- It is not wise to use a server to do something that a client can do --}}
<h2 onload=showTime() id="clock" class="digitalClock"></h2>
<script>
    function showTime() {
        // Create a date object containing curent timestamp
        var date = new Date();
        // Separate hours, minutes and seconds
        var h = date.getHours();
        var m = date.getMinutes();
        var s = date.getSeconds();
        // Add leading zeros
        h = (h < 10) ? "0" + h : h;
        m = (m < 10) ? "0" + m : m;
        s = (s < 10) ? "0" + s : s;
        // Build a string for time and put it into h2 named clock
        var time = h + "." + m + "." + s;
        document.getElementById("clock").innerHTML = time
        // After 1000 ms (1 s) call showTima again
        setTimeout(showTime, 1000);
    }
    showTime();
</script>