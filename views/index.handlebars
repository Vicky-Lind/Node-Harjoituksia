    <!-- This is the loading screen -->
    <div id="loading" >
        <img class="w-[110px] h-[110px] object-cover" src="/images/loading.gif" alt="Loading..." />
    </div>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const loadingScreen = document.getElementById('loading');

            // Display the loading screen for 5 seconds
            setTimeout(function() {
                loadingScreen.style.display = 'none';
            }, 3000); // 5000 milliseconds = 5 seconds
        });
    </script>
    <!-- END OF LOADING SCREEN -->


    <!-- This is the hero section -->
    <div id="hero-section" class="w-[98.5vw] h-[100vh] -mt-56 bg-[url('/images/background.svg')] bg-no-repeat bg-cover">

